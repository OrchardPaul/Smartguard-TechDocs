@using GadjIT_App.Data.CustomFormObjects;

<EditForm Model="@_CopyObject" OnValidSubmit="HandleValidSubmit">
    <div class="modal-body">
        <DataAnnotationsValidator />

        <div class="form-group">
            

            <div class="form-group">
                <label for="filterText">Filter</label>
                <InputText class="form-control form-control-md form-control-filter" @bind-Value="@FilterText" />
            </div>

            <div class="form-group control-with-button">
                <div class="control-main">
                    <InputSelect class="form-control form-control-xl" @bind-Value="_CopyObject.ViewName">
                        @if (_CopyObject.ViewName is null)
                        {
                            <option value="">Select</option>
                        }
                        else
                        {
                            <option value="@_CopyObject.ViewName">@_CopyObject.ViewName</option>
                        }

                        if(_ListP4WViews != null && _ListP4WViews.Count() > 0)
                        {
                            @foreach (var view in _ListP4WViews.Where(V => V.InternalName.ToUpper().Contains(FilterText.ToUpper())).OrderBy(V => V.InternalName).ToList())
                            {
                                <option value="@view.InternalName">
                                    @view.InternalName
                                </option>
                            }
                        }
                    </InputSelect>
                </div>
                <div class="control-button btn" @onclick="() => RefreshViewListOnModel()" title="Refresh List">
                    <i class="fa fa-sync"></i>
                </div>
            </div>

            
        </div>

        <div class="form-group">
            <label for="DisplayName">Display Name</label>
            <InputText class="form-control form-control-xl" @bind-Value="@_CopyObject.DisplayName" />
        </div>
    </div>

    <div class="button-container">
        <button type="submit" class="btn btn-main">Save</button>
        <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
    </div>
</EditForm>