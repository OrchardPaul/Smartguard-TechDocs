
    <div class="modal-body">
        <div class="alert alert-danger" style="margin: 40px 0 40px 0" role="alert">
            @(string.IsNullOrEmpty(_InfoText) ? string.IsNullOrEmpty(_ItemName) ? "Are you sure you wish to delete?" : $"Are you sure you wish to delete {_ItemName}?" : _InfoText )
        </div>

        <div class="modal-footer">
            <div class="container-fluid ">
                <div class="row">
                    <div class="col-6 text-right">
                        <button type="submit" @onclick="@HandleValidSubmit" class="btn btn-sub">Confirm</button>
                    </div>
                    <div class="col-6 text-left">
                        <button type="button" data-dismiss="modal" @onclick="@Close" class="btn btn-secondary">Cancel</button>
                    </div>
                                
                </div>
            </div>
        </div>
    </div>
