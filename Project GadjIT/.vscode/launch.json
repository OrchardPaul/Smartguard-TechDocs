{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/GadjIT.App/bin/Debug/net5.0/GadjIT.App.dll",
            "args": [],
            "cwd": "${workspaceFolder}/GadjIT.App",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "client api build",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build API",
            "program": "${workspaceFolder}/GadjIT.ClientAPI/bin/Debug/netcoreapp3.1/GadjIT.ClientAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/GadjIT.ClientAPI",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "App and API",
            "configurations": [".NET Core Launch (web)", "client api build"]
        }
    ]
}