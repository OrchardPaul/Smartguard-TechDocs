@using GadjIT_App.Data.CustomFormObjects;

<EditForm Model="@CopyObject" OnValidSubmit="HandleValidSubmit">
    <div class="modal-body">
        <DataAnnotationsValidator />

        <div class="form-group">
            

            <div class="form-group">
                <label for="filterText">Filter</label>
                <InputText class="form-control form-control-md form-control-filter" @bind-Value="@filterText" />
            </div>

            <div class="form-group control-with-button">
                <div class="control-main">
                    <InputSelect class="form-control form-control-xl" @bind-Value="CopyObject.ViewName">
                        @if (CopyObject.ViewName is null)
                        {
                            <option value="">Select</option>
                        }
                        else
                        {
                            <option value="@CopyObject.ViewName">@CopyObject.ViewName</option>
                        }

                        @foreach (var view in ListPartnerViews.Where(V => V.InternalName.ToUpper().Contains(filterText.ToUpper())).OrderBy(V => V.InternalName).ToList())
                        {
                            <option value="@view.InternalName">
                                @view.InternalName
                            </option>
                        }
                    </InputSelect>
                </div>
                <div class="control-button btn" @onclick="() => RefreshViewListOnModel()" title="Refresh List">
                    <i class="fa fa-sync"></i>
                </div>
            </div>

            
        </div>

        <div class="form-group">
            <label for="DisplayName">Display Name</label>
            <InputText class="form-control form-control-xl" @bind-Value="@CopyObject.DisplayName" />
        </div>
    </div>

    <div class="button-container">
        <button type="submit" class="btn btn-main">Save</button>
        <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
    </div>
</EditForm>