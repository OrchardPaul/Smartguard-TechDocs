@using GadjIT_App.Pages._Shared.Modals
@using GadjIT_ClientContext.P4W.Custom
@using System.Globalization;




<div class="grid-chapter grid-chapter-messages">
    @if (_LstTickerMessages == null)
    {
        <div class="spinner"></div>
    }
    else
    {
        <div class="grid-actions">

            @if(!CompareSystems)
            {
                if(UserSession.IsAdminUser)
                {
                    <div class="btn-group">
                        <button @onclick='() => PrepareForInsert()' class="btn btn-main btn-shadow" title="Add new ticker message"><i class="fa fa-plus"></i><span>New</span></button>
                        @* <button @onclick='() => CondenseMessageSeqNo("TickerMessages")' class="btn btn-main btn-shadow @(MessagesSeqNoIsValid() ? "invisible" : "")" title="Re-order Sequence Numbers"><i class="fa fa-sort-numeric-down"></i></button> *@
                    </div>
                }
            }

            <ModalTooltip Direction="top" Text="Ticker Message to be made visible on the Smartflow screen." Class="w-2">
                <span class="info-icon">
                    <span class=" fa fa-info-circle fa-2x "></span>
                </span>
            </ModalTooltip>

            <div class="spacer">
            </div>
            @if(UserSession.IsAdminUser)
            {
                <div class="btn-group sync-group invisible-md-down">
                    <button type="button" @onclick="() => PrepareChapterSync()" class="btn btn-main btn-shadow @(!CompareSystems ? "hidden" : "")" title="Sync To @UserSession.AltSystem"><i class="fa fa-sync"></i><span>Sync</span></button>
                    <input type="checkbox" class="ml-1 mt-1" @bind=CompareSystems /><span class="ml-2 font-75 ">Compare to @UserSession.AltSystem </span>
                </div>
            }
        </div>

        <div class="grid-data @(UserSession.IsAdminUser ? "grid-can-edit" : "") ">
            <div class="row grid-header invisible-md-down">
                <div class="data-item ">
                    <div class="data-item-sub">
                        Message
                    </div>
                </div>
                <div class="data-item ">
                    <div class="data-item-sub">
                        From Date
                    </div>
                </div>
                <div class="data-item ">
                    <div class="data-item-sub">
                        To Date
                    </div>
                </div>
            </div>
            @if(_LstTickerMessages != null)
            {
                <div class="grid-data">
                    <Dropzone Items="_LstTickerMessages"
                        InstantReplace="true"
                        OnItemDrop="@((s)=>ReSequence(_LstTickerMessages.IndexOf(s) + 1))"
                        OnDragStartParam="() => ResetRowChanged()"
                        TItem="VmTickerMessage"
                        UseCustomImage="true">

                        <div class="row grid-row @(RowChanged == context.Message.SeqNo && !SeqMoving ? "row-changed" : "" )">
                            <div class="data-item">
                                @if(UserSession.IsAdminUser && !CompareSystems)
                                {

                                    <div class="btn-ellipses float-left">
                                        <span class="fa fa-ellipsis-v"></span>
                                        <div class="ellipsis-menu">
                                            <ul>
                                                <li class="col-main" @onclick='() => PrepareForEdit(context)'>
                                                    <span class="fa fa-pencil-alt mr-2"></span>
                                                    <span>Edit</span>
                                                </li>
                                                <li class="col-main" @onclick='() => ShowChapterMessageViewModal(context)'>
                                                    <span class="fa fa-binoculars mr-2"></span>
                                                    <span>View</span>
                                                </li>
                                                <li class="col-red" @onclick='() => ShowChapterMessageDelete(context)'>
                                                    <span class="fa fa-trash-alt mr-2"></span>
                                                    <span>Delete</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="data-item-right">
                                        <ModalTooltip Direction="top" Text="@context.MsgTooltip" Class="w-3">
                                            @if(context.MsgValidation == "Exceeded"){<span class="doc-icon" title="Exceeded"><span class="fa fa-comment mr-2 font-grey"></span></span>}
                                            @if(context.MsgValidation == "Expired"){<span class="doc-icon" title="Expired"><span class="fa fa-comment mr-2 font-red"></span></span>}
                                            @if(context.MsgValidation == "Future"){<span class="doc-icon" title="Future"><span class="fa fa-comment mr-2 font-green"></span></span>}
                                            @if(context.MsgValidation == "Invalid"){<span class="doc-icon" title="Invalid"><span class="fa fa-exclamation-triangle mr-2 font-red"></span></span>}
                                            @if(context.MsgValidation == "Valid"){<span class="doc-icon" title="Valid"><span class="fa fa-comment mr-2 font-blue"></span></span>}
                                        </ModalTooltip>
                                    </div>
                                    <div class="data-item-sub draggable">
                                        @context.Message.Message
                                    </div>
                                }
                                else if(UserSession.IsAdminUser && CompareSystems)
                                {
                                    <div class="btn-ellipses float-left">
                                        @* @if (!(context.ComparisonIcon is null))
                                        {
                                            @if (!(context.ComparisonResult is null) && !(context.ComparisonResult == "Exact match"))
                                            {
                                                <div class="btn-dashed" @onclick="() => ShowMessageComparisonModal(context)"><span class="fa fa-@context.ComparisonIcon"></span></div> 
                                            }
                                            else
                                            {
                                                <span class="fa fa-@context.ComparisonIcon"></span> 
                                            } 
                                        }
                                        else
                                        {
                                            <div class="spinner"></div>
                                        }  *@
                                        @if (!(context.ComparisonIcon is null))
                                        {
                                            @if (!(context.ComparisonResult == "Exact match"))
                                            {
                                                <ModalTooltip Direction="right" Text=@(context.ComparisonResult == "Partial match" ? "Differences found, click to sync" : "Does not exist, click to create") Class="w-2">
                                                    <div class="btn-dashed" @onclick="() => ShowChapterComparisonModal(context)"><span class="fa fa-@context.ComparisonIcon"></span></div>
                                                </ModalTooltip>
                                            }
                                            else
                                            {
                                                <ModalTooltip Direction="right" Text="Exact Match" Class="w-1">
                                                    <span class="fa fa-@context.ComparisonIcon"></span>
                                                </ModalTooltip>
                                            }
                                        }
                                        else
                                        {
                                            <div class="spinner"></div>
                                        }
                                    </div>

                                    <div class="data-item-sub">
                                        <span class="fa fa-comment mr-2 tickericon"></span> @context.Message.Message
                                    </div> 
                                }
                                else
                                {
                                    <div class="btn-ellipses float-left">
                                        <span class="fa fa-ellipsis-v"></span>
                                        <div class="ellipsis-menu">
                                            <ul>
                                                <li class="col-main" @onclick='() => ShowChapterMessageViewModal(context)'>
                                                    <span class="fa fa-binoculars mr-2"></span>
                                                    <span>View</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="data-item-sub">
                                        <span class="fa fa-comment mr-2 tickericon"></span> @context.Message.Message
                                    </div>
                                }

                                @if(UserSession.IsAdminUser && !CompareSystems)
                                {

                                    <div class="data-item-right seq-change">
                                        <div @onclick='() => MoveSeq(context.Message, "Up")' class="@(@context.Message.SeqNo == 1 ? "invisible" : "")"><span class="fa fa-angle-up"></span></div>
                                        <div class="seq-no">@context.Message.SeqNo</div>
                                        <div @onclick='() => MoveSeq(context.Message, "Down")' class="@(@context.Message.SeqNo == _LstTickerMessages.Count() ? "invisible" : "")"><span class="fa fa-angle-down"></span></div>
                                    </div>
                                }
                                else
                                {
                                    <div class="data-item-right">
                                        <div class="seq-no">@context.Message.SeqNo</div>
                                    </div>
                                }

                            </div>
                            @if(!string.IsNullOrEmpty(context.Message.FromDate))
                            {
                                <div class="hidden-md-down data-item ">
                                    <div class="data-item-sub">@(DateTime.ParseExact(context.Message.FromDate, "yyyyMMdd", CultureInfo.InvariantCulture).ToString("dd/MM/yyyy"))</div>
                                </div>
                            }
                            else
                            {
                                <div class="hidden-md-down data-item ">
                                    <div class="data-item-sub">
                                    </div>
                                </div>
                            }
                            @if(!string.IsNullOrEmpty(context.Message.ToDate))
                            {
                                <div class="hidden-md-down data-item ">
                                    <div class="data-item-sub font-85 pl-3">@(DateTime.ParseExact(context.Message.ToDate, "yyyyMMdd", CultureInfo.InvariantCulture).ToString("dd/MM/yyyy"))</div>
                                </div>
                            }
                            else
                            {
                                <div class="hidden-md-down data-item ">
                                    <div class="data-item-sub">
                                    </div>
                                </div>
                            } 
                        </div>
                    </Dropzone>


                    @if (CompareSystems && !(LstAltSystemItems is null))
                    {
                        @foreach (var vmMessage in LstAltSystemItems.Where(F => !F.Compared).ToList())
                        {
                            <div class="row grid-row @(RowChanged == vmMessage.Message.SeqNo ? "row-changed" : "" )">
                                <div class="data-item">

                                    <div class="btn-ellipses float-left">
                                        <ModalTooltip Direction="right" Text=@("Exists on alternate system, Do you wish to delete?") Class="w-2">
                                            <div class="btn-dashed" @onclick="() => ShowChapterDeleteAlt(vmMessage)"><span class="fa fa-trash"></span></div>
                                        </ModalTooltip>
                                    </div>
                                    <div class="data-item-sub">
                                        <span class="fa fa-comment mr-2 tickericon"></span> @vmMessage.Message.Message
                                    </div>
                                    <div class="data-item-right">
                                        <div class="seq-no">@vmMessage.Message.SeqNo</div>
                                    </div>

                                </div>
                                @if (!string.IsNullOrEmpty(vmMessage.Message.FromDate))
                                {
                                    <div class="hidden-md-down data-item ">
                                        <div class="data-item-sub">@(DateTime.ParseExact(vmMessage.Message.FromDate, "yyyyMMdd", CultureInfo.InvariantCulture).ToString("dd/MM/yyyy"))</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="hidden-md-down data-item ">
                                        <div class="data-item-sub">
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(vmMessage.Message.ToDate))
                                {
                                    <div class="hidden-md-down data-item ">
                                        <div class="data-item-sub font-85 pl-3">@(DateTime.ParseExact(vmMessage.Message.ToDate, "yyyyMMdd", CultureInfo.InvariantCulture).ToString("dd/MM/yyyy"))</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="hidden-md-down data-item ">
                                        <div class="data-item-sub">
                                        </div>
                                    </div>
                                } 
                            </div>
                        }
                    }
                </div>
            }
        </div>
    }
</div>

