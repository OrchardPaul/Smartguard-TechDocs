@using GadjIT_App.Pages._Shared.Modals
@using GadjIT_ClientContext.P4W.Custom



<div class="grid-chapter grid-chapter-dataviews">
    @if (_LstDataViews == null)
    {
        <div class="spinner"></div>
    }
    else
    {
        <div class="grid-actions">

            @if (!CompareSystems)
            {
                @if (UserSession.IsAdminUser)
                {
                    <div class="btn-group">
                        @if (_LstDataViews.Count() < 6)
                        {
                            <button @onclick='() => PrepareForInsert()' class="btn btn-main btn-shadow" title="Add new data view"><i class="fa fa-plus"></i><span>New</span></button>
                        }
                        else
                        {
                            <button class="btn btn-main btn-shadow" title="Cannot add new data view - Max number of views reached" disabled><i class="fa fa-plus"></i><span>New</span></button>
                        }
                        @* <button @onclick='() => CondenseBlockNo("DataViews")' class="btn btn-main btn-shadow @(BlockNoIsValid() ? "invisible" : "")" title="Re-order Sequence Numbers"><i class="fa fa-sort-numeric-down"></i></button> *@
                    </div>
                }
            }

            <ModalTooltip Direction="top" Text="Data Views to be made available in the Smartflow." Class="w-2">
                <span class="info-icon">
                    <span class=" fa fa-info-circle fa-2x "></span>
                </span>
            </ModalTooltip>

            <div class="spacer">
            </div>
            @if (UserSession.IsAdminUser)
            {
                <div class="btn-group sync-group invisible-md-down">
                    <button type="button" @onclick="() => PrepareChapterSync()" class="btn btn-main btn-shadow @(!CompareSystems ? "hidden" : "")" title="Sync To @UserSession.AltSystem"><i class="fa fa-sync"></i><span>Sync</span></button>
                    <input type="checkbox" class="ml-1 mt-1" @bind=CompareSystems /><span class="ml-2 font-75 ">Compare to @UserSession.AltSystem </span>
                </div>
            }
        </div>

        <div class="grid-data @(UserSession.IsAdminUser ? "grid-can-edit" : "") ">
            <Dropzone Items="_LstDataViews"
                InstantReplace="true"
                OnItemDrop="@((s)=>ReSequence(_LstDataViews.IndexOf(s) + 1))"
                OnDragStartParam="() => ResetRowChanged()"
                TItem="VmDataView"
                UseCustomImage="true">

                <div class="row grid-row @(RowChanged == context.DataView.SeqNo && !SeqMoving ? "row-changed" : "" )">
                    <div class="data-item">
                        @if (UserSession.IsAdminUser && !CompareSystems)
                        {

                            <div class="btn-ellipses float-left">
                                <span class="fa fa-ellipsis-v"></span>
                                <div class="ellipsis-menu">
                                    <ul>
                                        <li class="col-main" @onclick='() => PrepareForEdit(context)'>
                                            <span class="fa fa-pencil-alt mr-2"></span>
                                            <span>Edit</span>
                                        </li>
                                        <li class="col-main" @onclick='() => ShowChapterDataViewDisplayModal(context)'>
                                            <span class="fa fa-binoculars mr-2"></span>
                                            <span>View</span>
                                        </li>
                                        <li class="col-red" @onclick='() => ShowChapterDataViewDelete(context)'>
                                            <span class="fa fa-trash-alt mr-2"></span>
                                            <span>Delete</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="data-item-sub draggable">
                                <span class="fa fa-database mr-2"></span> @context.DataView.DisplayNameOrViewName
                            </div>
                        }
                        else if (UserSession.IsAdminUser && CompareSystems)
                        {
                            <div class="btn-ellipses float-left">
                                @if (!(context.ComparisonIcon is null))
                                {
                                    @if (!(context.ComparisonResult == "Exact match"))
                                    {
                                        <ModalTooltip Direction="right" Text=@(context.ComparisonResult == "Partial match" ? "Differences found, click to sync" : "Does not exist, click to create") Class="w-2">
                                            <div class="btn-dashed" @onclick="() => ShowChapterComparisonModal(context)"><span class="fa fa-@context.ComparisonIcon"></span></div>
                                        </ModalTooltip>
                                    }
                                    else
                                    {
                                        <ModalTooltip Direction="right" Text="Exact Match" Class="w-1">
                                            <span class="fa fa-@context.ComparisonIcon"></span>
                                        </ModalTooltip>
                                    }
                                }
                                else
                                {
                                    <div class="spinner"></div>
                                }

                            </div>
                            <div class="data-item-sub">
                                <span class="fa fa-database mr-2"></span> @context.DataView.DisplayNameOrViewName
                            </div>
                        }
                        else
                        {
                            <div class="btn-ellipses float-left">
                                <span class="fa fa-ellipsis-v"></span>
                                <div class="ellipsis-menu">
                                    <ul>
                                        <li class="col-main" @onclick='() => ShowChapterDataViewDisplayModal(context)'>
                                            <span class="fa fa-binoculars mr-2"></span>
                                            <span>View</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="data-item-sub">
                                <span class="fa fa-database mr-2"></span> @context.DataView.DisplayNameOrViewName
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(context.DataView.DisplayName))
                        {
                            <div class="data-item-right hidden-md-down">
                                <ModalTooltip Direction="left" Text=@("Template: " + context.DataView.ViewName) Class="w-2">
                                    <span class="fa fa-clone"></span>
                                </ModalTooltip>
                            </div>
                        }

                        @if (UserSession.IsAdminUser && !CompareSystems)
                        {

                            <div class="data-item-right seq-change">
                                <div @onclick='() => MoveSeq(context.DataView, "Up")' class="@(@context.DataView.SeqNo == 1 ? "invisible" : "")"><span class="fa fa-angle-up"></span></div>
                                <div class="seq-no">@context.DataView.SeqNo</div>
                                <div @onclick='() => MoveSeq(context.DataView, "Down")' class="@(@context.DataView.SeqNo == _LstDataViews.Count() ? "invisible" : "")"><span class="fa fa-angle-down"></span></div>
                            </div>
                        }
                        else
                        {
                            <div class="data-item-right seq-change">
                                <div class="seq-no">@context.DataView.SeqNo</div>
                            </div>
                        }

                        


                    </div>

                </div>
            </Dropzone>

            

            @if (CompareSystems && !(LstAltSystemItems is null))
            {
                @foreach (var dataView in LstAltSystemItems.Where(F => !F.Compared).ToList())
                {
                    <div class="row grid-row @(RowChanged == dataView.DataView.SeqNo ? "row-changed" : "" )">
                        <div class="col-12 data-item">

                            <div class="btn-ellipses float-left">
                                <ModalTooltip Direction="right" Text=@("Exists on alternate system, Do you wish to delete?") Class="w-2">
                                    <div class="btn-dashed" @onclick="() => ShowChapterDeleteAlt(dataView)"><span class="fa fa-trash"></span></div>
                                </ModalTooltip>
                            </div>

                            <div class="data-item-sub">
                                <span class="fa fa-database mr-2"></span> @dataView.DataView.DisplayNameOrViewName
                            </div>



                            @if (!string.IsNullOrEmpty(dataView.DataView.DisplayName))
                            {
                                <div class="data-item-right hidden-md-down">
                                    <ModalTooltip Direction="top" Text=@("Template: " + dataView.DataView.ViewName) Class="w-3">
                                        <span class="fa fa-clone"></span>
                                    </ModalTooltip>
                                </div>
                            }

                            <div class="data-item-right seq-change">
                                <div class="seq-no">@dataView.DataView.SeqNo</div>
                            </div>



                        </div>

                    </div>
                }
            }
        </div>
    }
</div>