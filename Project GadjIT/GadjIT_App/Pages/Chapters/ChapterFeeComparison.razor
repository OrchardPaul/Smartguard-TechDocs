@if (!(Object.AltObject is null | Object.FeeObject is null))
{
    <div class="modal-body" tabindex="0">
        <table class="table-basic table-top-header table-left-header table-borderless">
            <thead>

                <tr>
                    <td style="width: 150px">
                    </td>
                    <td style="width: 250px">
                        <div class=" d-flex justify-content-center">
                            @(UserSession.SelectedSystem == "Dev" ? "Dev" : "Live")
                        </div>
                    </td>
                    <td style="width: 250px">
                        <div class=" d-flex justify-content-center">
                            @(UserSession.SelectedSystem == "Dev" ? "Live" : "Dev")
                        </div>
                    </td>
                    <td style="width: 30px">
                    </td>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        Seq Number
                    </td>
                    <td>
                        @Object.FeeObject.SeqNo
                    </td>
                    <td>
                        @Object.AltObject.SeqNo
                    </td>
                    <td>
                        <span class="fa fa-@(Object.ComparisonList.Contains("SeqNo") ? "exclamation" : "check")"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Fee Name:
                    </td>
                    <td>
                        <input type="text" class="read-only" readonly value="@Object.FeeObject.FeeName" />
                    </td>
                    <td>
                        <input type="text" class="read-only" value="@Object.AltObject.FeeName" />
                    </td>
                    <td>
                        <span class="fa fa-@(Object.ComparisonList.Contains("FeeName") ? "exclamation" : "check")"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Fee Category
                    </td>
                    <td>
                        <input type="text" class="read-only" readonly value="@Object.FeeObject.FeeCategory" />
                    </td>
                    <td>
                        <input type="text" class="read-only" value="@Object.AltObject.FeeCategory" />
                    </td>
                    <td>
                        <span class="fa fa-@(Object.ComparisonList.Contains("FeeCategory") ? "exclamation" : "check")"></span>
                    </td>
                </tr>

                <tr>
                    <td>
                        Amount
                    </td>
                    <td>
                        @Object.FeeObject.Amount
                    </td>
                    <td>
                        @Object.AltObject.Amount
                    </td>
                    <td>
                        <span class="fa fa-@(Object.ComparisonList.Contains("Amount") ? "exclamation" : "check")"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        VATable
                    </td>
                    <td>
                        <input type="text" class="read-only" value="@Object.FeeObject.VATable" />
                    </td>
                    <td>
                        <input type="text" class="read-only" value="@Object.AltObject.VATable" />
                    </td>
                    <td>
                        <span class="fa fa-@(Object.ComparisonList.Contains("VATable") ? "exclamation" : "check")"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Posting Type
                    </td>
                    <td>
                        <input type="text" class="read-only" value="@Object.FeeObject.PostingType" />
                    </td>
                    <td>
                        <input type="text" class="read-only" value="@Object.AltObject.PostingType" />
                    </td>
                    <td>
                        <span class="fa fa-@(Object.ComparisonList.Contains("PostingType") ? "exclamation" : "check")"></span>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td>
                    </td>
                    <td>
                        <div class=" d-flex justify-content-center">
                            <button type="submit" autofocus class="btn btn-main" @onclick="() => HandleValidSubmit(false)">@(UserSession.SelectedSystem == "Dev" ? ">> Live" : ">> Dev")</button>
                        </div>
                    </td>
                    <td>
                        <div class=" d-flex justify-content-center">
                            <button type="submit" autofocus class="btn btn-main" @onclick="() => HandleValidSubmit(true)">@(UserSession.SelectedSystem == "Dev" ? "Dev <<" : "Live <<")</button>
                        </div>
                    </td>
                    <td>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
}
else
{
    @code {
        string curSystem;
    }

    @if (Object.AltObject is null)
    {
        curSystem = (UserSession.SelectedSystem == "Dev" ? "Live" : "Dev");
    }
    else
    {
        curSystem = (UserSession.SelectedSystem == "Dev" ? "Dev" : "Live");

    }

    @if (!CreateNewSmartflow)
    {
        <div class="modal-body">
            <p>Smartflow item does not exist on @curSystem</p>
            <p>Do you wish create this object on @curSystem?</p>
        </div>
    }
    else
    {
        <div class="modal-body">
            <p>Smartflow does not exist on @curSystem</p>
            <p>Do you wish create this Smartflow on @curSystem?</p>
        </div>
    }

    <div class="button-container">
        <button type="submit" autofocus class="btn btn-main" @onclick="() => AddObject(false)">Create on @curSystem</button>
        <button type="button" class="btn btn-secondary" @onclick="() => Close()">Cancel</button>
    </div>
}


