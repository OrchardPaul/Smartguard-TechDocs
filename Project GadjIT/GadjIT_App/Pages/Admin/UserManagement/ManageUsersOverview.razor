@inject GadjIT_App.Services.SessionState.IUserSessionState state
@using GadjIT_App.Pages.Shared.Modals


<div class="tran-block page-header-block ">
    <div>
        <div class="page-header-title">
            <div class="float-left back-link">
                <NavLink href="admin"><span class="col-alt fa fa-angle-double-left"></span></NavLink>
            </div>
            <h3>User Maintenance</h3>
        </div>
        <p class="hidden-md-down">Add/Update/Delete users</p>
    </div>
</div>




@if (LstUserDataItems is null)
{
    <div class="spinner"></div>
}
else
{
    <div class="col-xl-8 col-12 mb-3 tran-block rounded">

        <div class="container-fluid ">

            <div class="row filter-block">
                <div class="col-2">
                    <h4>Filter:</h4>
                </div>
                <div class="col-3 form-group">
                    <label>Role</label>
                    <EditForm Model="SelectedRole">
                        <InputSelect class="form-control" @bind-Value="SelectedRole">
                            <option value="None"></option>
                            @foreach (var r in LstRoles)
                                {
                                <option value="@r.Id">
                                    @r.Name
                                </option>}
                        </InputSelect>
                    </EditForm>
                </div>
                <div class="col-4 form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" value="@FilterName" @oninput="changeNameFilter" />
                </div>
            </div>




            <div class="mt-3 mb-2">
                <button data-toggle="modal" data-target="#roleModal" @onclick='(() => PrepareForInsert())' class="btn btn-main btn-shadow" style="margin-bottom: 12px"><i class="fa fa-plus pr-1"></i> Add New User</button>
            </div>
            <div class="grid-can-edit">
                <div class="row grid-header hidden-lg-down ">
                    <div class="col-xl-6 col-12 data-item"><div class="data-item-sub">Name</div></div>
                    <div class="col-6 hidden-lg-down data-item"><div class="data-item-sub">Email</div></div>
                </div>

                @foreach (var userDataItem in LstUserDataItems
                                          .Where(U => SelectedRole == "None" ? true : U.UserRoles
                                                                                          .Select(R => R.RoleId)
                                                                                          .ToList()
                                                                                          .Contains(SelectedRole))
                                          .Where(U => FilterName == "" ? true : U.User
                                                                                  .FullName
                                                                                  .ToUpper()
                                                                                  .StartsWith(FilterName.ToUpper()))
                                          .ToList())
                {
                    <div class="row grid-row">
                        <div class="col-xl-6 col-12 data-item">
                            <div class="btn-ellipses float-left">
                                <span class="fa fa-ellipsis-v"></span>
                                <div class="ellipsis-menu">
                                    <ul>
                                        <li class="col-main" @onclick='(() => PrepareForEdit((userDataItem.User)))'>
                                            <span class="fa fa-pencil-alt mr-2"></span>
                                            <span>Edit</span>
                                        </li>

                                        @if (!(userDataItem.User.UserName == SessionState.User.UserName))
                                        {
                                            <li class="col-red" @onclick="() => PrepareModalForDelete(userDataItem.User)">
                                                <span class="fa fa-trash-alt mr-2"></span>
                                                <span>Delete</span>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                            <div class="data-item-sub"> @userDataItem.User.FullName</div>
                        </div>
                        <div class="col-6 hidden-lg-down data-item">
                            <div class="data-item-sub"> @userDataItem.User.UserName</div>

                        </div>

                    </div>

                }

            </div>
        </div>


    </div>
}
