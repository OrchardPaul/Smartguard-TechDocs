
<div class="modal-body" tabindex="0">
    <table class="table-basic table-top-header table-left-header table-borderless">
        <thead>

            <tr>
                <td style="width: 150px">
                </td>
                <td style="width: 500px">
                </td>
            </tr>
        </thead>
        <tbody>
            
            <tr>
                <td>
                    Seq Number
                </td>
                <td>
                    @_Object.SmartflowObject.SeqNo
                </td>
            </tr>
            

            <tr>
                <td>
                    Name:
                </td>
                <td>
                    <input type="text" class="read-only" readonly value="@_Object.SmartflowObject.Name" />
                </td>

            </tr>
            
            <tr>
                <td>
                    Display Name:
                </td>
                <td>
                    <input type="text" class="read-only" readonly value="@_Object.SmartflowObject.AltDisplayName" />
                </td>
            </tr>
            <tr>
                <td>
                    Reschedule Days
                </td>
                <td>
                    @_Object.SmartflowObject.RescheduleDays
                </td>
            </tr>
            <tr>
                <td>
                    Schedule As Name:
                </td>
                <td>
                    <input type="text" class="read-only" value="@_Object.SmartflowObject.AsName" />
                </td>
            </tr>
            <tr>
                <td>
                    Complete As Name
                </td>
                <td>
                    <input type="text" class="read-only" value="@_Object.SmartflowObject.CompleteName" />
                </td>
            </tr>
            <tr>
                <td>
                    Next Status
                </td>
                <td>
                    <input type="text" class="read-only" value="@_Object.SmartflowObject.NextStatus" />
                </td>
            </tr>
            <tr>
                <td>
                    Action
                </td>
                <td>
                    <input type="text" class="read-only" value="@_Object.SmartflowObject.Action" />
                </td>
            </tr>
            <tr>
                <td>
                    User Message
                </td>
                <td>
                    <input type="text" class="read-only" value="@_Object.SmartflowObject.UserMessage" />
                </td>
            </tr>
            <tr>
                <td>
                    Popup Alert
                </td>
                <td>
                    <input type="text" class="read-only" value="@_Object.SmartflowObject.PopupAlert" />
                </td>
            </tr>


        </tbody>
    </table>
</div>

<div class="button-container">
    <button type="button" class="btn btn-secondary" @onclick="() => Close()">Close</button>
</div>