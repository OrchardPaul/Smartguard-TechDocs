{
  "ConnectionStrings": {
    "OR_GadjIT_Web": "Data Source=dev\\SQLEXPRESS;Initial Catalog=OR_GadjIT_Web;Integrated Security=True;Pooling=False"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=dev\\SQLEXPRESS;Initial Catalog=OR_GadjIT_Web;Integrated Security=True;Pooling=False",
          "tableName": "GadjIT_Log",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "customColumns": [
              {
                "ColumnName": "SourceContext",
                "DataType": "varchar",
                "DataLength": 75
              },
              {
                "ColumnName": "SourceUserId",
                "DataType": "varchar",
                "DataLength": 75
              },
              {
                "ColumnName": "SourceCompanyId",
                "DataType": "int"
              },
              {
                "ColumnName": "SourceSystem",
                "DataType": "varchar",
                "DataLength": 25
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "F:\\WorkSpaces\\PT\\Git - GadjIT VS\\Project GadjIT\\GadjIT_App\\GadjIT_Log.txt"
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@l = 'Error'"
                }
              }
            ]
          }
        }
      }

    ]
  },
  "AppSettings": {
    "Version": "V01.04",
    "Email": "support@orchardrock.co.uk",
    "UserName": "Gizmo",
    "UserGuideURL": "http://smartflowdocs.orchardrock.co.uk"
    
  }
}
