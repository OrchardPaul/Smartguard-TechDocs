{
  "ConnectionStrings": {
    "OR_GadjIT_Web": "<Now taken from Azure KeyVault>"
  },
  "Azure":{
    "Mode": "Development",
    "Development": {
      "KeyVaultName": "Gizmo-Secrets"
    },
    "Production": {
      "KeyVaultName": "GadjIT-Secrets-byCert",
      "ApplicationRegId": "504f6de8-c7fe-41b0-849a-7f7b625c4bd4",
      "ADCertThumbprint": "3CD864DE0204987F0AA130896A0E6BC581B59A66",
      "ADTenantId": "54929981-ec39-442f-96ce-cc793bb17b8d"
    },
    "Development-Azure": {
      "KeyVaultName": "Gizmo-Secrets-byCert",
      "ApplicationRegId": "504f6de8-c7fe-41b0-849a-7f7b625c4bd4",
      "ADCertThumbprint": "3CD864DE0204987F0AA130896A0E6BC581B59A66",
      "ADTenantId": "54929981-ec39-442f-96ce-cc793bb17b8d"
    },
    "OpenAI": {
      "EndPoint": "<Now taken from Azure KeyVault>",
      "EndPointPath": "openai/deployments/gpt-4/chat/completions?api-version=2023-03-15-preview",
      "Key": "<Now taken from Azure KeyVault>",
      "Model": "gpt-4",
      "Temperature": 0.1,
      "MaxTokens": 5000
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { 
        "Name": "Console" 
      },
      {
        "Name": "LoggerJSON",
        "Args": {
          "path": "\\Logs\\JsonLog.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "\\Logs\\GadjIT_Log.txt",
                  "rollingInterval": "Day", 
                  "retainedFileCountLimit": 30
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@l = 'Error'"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "<Now taken from Azure KeyVault>",
          "tableName": "GadjIT_Log",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "customColumns": [
              {
                "ColumnName": "SourceContext",
                "DataType": "varchar",
                "DataLength": 75
              },
              {
                "ColumnName": "SourceUserId",
                "DataType": "varchar",
                "DataLength": 75
              },
              {
                "ColumnName": "SourceCompanyId",
                "DataType": "int"
              },
              {
                "ColumnName": "SourceSystem",
                "DataType": "varchar",
                "DataLength": 25
              }
            ]
          }
        }
      }
    ]
  },
  "AppSettings": {
    "Version": "V04.01",
    "Email": "support@orchardrock.co.uk",
    "UserName": "Gizmo",
    "UserGuideURL": "https://gadjit.orchardrock.co.uk/help",
    "DocReportsURL": "https://localhost:7097",
    "DocReportsSystem": "Dev",
    "AdminCompanies": ["Orchard Demo","Orchard Rock","Orchard Debt","Orchard Resi"]
    
  },
  "DetailedErrors": true
}
