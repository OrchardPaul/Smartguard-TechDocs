{
  "ConnectionStrings": {
    "GadjIT_API": "Data Source=GRUMPY3;Initial Catalog=Gizmo_OrchardRock_Dev;Trusted_Connection=True;TrustServerCertificate=True",
    "GadjIT_API_Readonly": "Data Source=GRUMPY3;Initial Catalog=Gizmo_OrchardRock_Dev;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=GRUMPY3;Initial Catalog=Gizmo_OrchardRock_Dev;Trusted_Connection=True;TrustServerCertificate=True",
          "tableName": "Usr_ORSF_GadjIT_Log",
          "autoCreateSqlTable": true
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "C:\\Development\\ORWeb\\GadjIT\\_Projects\\GadjIT_ClientAPI\\Logs\\GadjIT_Log-.txt"
                  ,"rollingInterval": "Day"
                  ,"retainedFileCountLimit": 30
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@l = 'Error'"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
