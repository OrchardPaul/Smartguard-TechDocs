@inject IJSRuntime jsRuntime


<div class="modal" tabindex="-1" role="dialog" id="modalDelete" style="z-index:999999">
    <div class="modal-dialog"  style="height: @ModalHeight; width: @ModalWidth;"  role="document">
        <div class="modal-content">
            <EditForm Model="@WishToDelete" OnValidSubmit="@HandleValidSubmit">
                <div class="modal-header">
                    <h5 class="modal-title">@InfoHeader</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="fa fa-window-close"></span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="alert alert-danger" style="margin: 40px 0 40px 0" role="alert">
                        Are you sure you wish to delete
                    </div>

                    <div class="modal-footer">
                        <div class="container-fluid ">
                            <div class="row">
                                <div class="col-6 text-left">
                                    <button type="button" data-dismiss="modal" @onclick="@CloseModal" class="btn btn-secondary">Cancel</button>
                                </div>
                                <div class="col-6 text-right">
                                    <button type="submit" class="btn btn-sub">Confirm</button>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </EditForm>
        </div>
    </div>
</div>