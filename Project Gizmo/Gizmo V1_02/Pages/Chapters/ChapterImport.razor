@inject IJSRuntime jsRuntime

<div class="modal-body">
    <div class="form-group">
        
        <div class="custom-file">
            <InputFile OnChange="HandleFileSelection" class="custom-file-input" id="customFileInput"></InputFile>
            <label class="custom-file-label" for="customInput">Upload backup files</label>
        </div>
    
    </div>

    @if (!ToggleError)
    {
        @if (!(ListFileDescriptions is null) && ListFileDescriptions.Where(F => F.FilePath.Contains(".xlsx")).ToList().Count() > 0)
        {
            <div class="form-group">
                <div class="data-item-sub">
                    @ListFileDescriptions.Where(F => F.FilePath.Contains(".xlsx")).FirstOrDefault().FileName
                </div>
            </div>

            <div class="form-group">
                <label>Copy Options</label>
                @foreach (var option in CopyOptions)
                {
                    <div class="ml-2 mr-1">
                        <label>@option.Option</label>
                        <input class="float-right" type="checkbox" @bind-value="option.Selected" />
                    </div>
                }
            </div>


            <div class="button-container">
                <button type="submit" class="btn btn-main" @onclick='() => HandleValidSubmit(ListFileDescriptions.Where(F => F.FilePath.Contains(".xlsx")).FirstOrDefault().FilePath)'>Import</button>
                <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
            </div>

        }
        else
        {
            <div>
                Please select an excel file to import
            </div>


            <div class="button-container">
                <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
            </div>
        }
    }
    else
    {
        <div class="form-group">
            <div>Errors occured when downloading excel spreadsheet:</div>
            @foreach(var error in ErrorList)
            {
                <div>
                    @error
                </div>
            }
        </div>

        <div class="button-container">
            <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
        </div>
    }




</div>

