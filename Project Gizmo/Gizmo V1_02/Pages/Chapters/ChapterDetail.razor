@using Gizmo_V1_02.Data.CustomFormObjects;

<EditForm Model="@TaskObject" OnValidSubmit="HandleValidSubmit">
    <div class="modal-body">

        <DataAnnotationsValidator />
        @if (selectedList == "Steps and Documents")
        {
            @if (dropDownChapterList is null)
            {
                <div class="spinner"></div>
            }
            else
            {
                <div class="form-group">
                    <label for="DocType">Case Type Group</label>
                    <InputSelectInteger class="form-control form-control-lg"
                                        @bind-Value="selectedCaseTypeGroup">
                        <option value="-1">Select</option>
                        @foreach (var group in CaseTypeGroups)
                                {
                            <option value="@group.Id">
                                @group.Name
                            </option>
                                }
                    </InputSelectInteger>
                </div>

                <div class="form-group">
                    <label for="DocName">Document / Step</label>
                    @if (selectedCaseTypeGroup == -1 & TaskObject.Name is null)
                    {
                        <select class="form-control" disabled />
                    }
                    else
                    {


                        <InputSelect class="form-control form-control-xl" @bind-Value="TaskObject.Name">
                            @if (TaskObject.Name is null)
                                        {
                                <option value="">Select</option>
                                        }
                                        else
                                        {
                                <option value="@TaskObject.Name">@TaskObject.Name</option>
                                        }


                            @foreach (var doc in dropDownChapterList.Where(D => D.CaseTypeGroupRef == selectedCaseTypeGroup).OrderBy(D => D.Name).ToList())
                                        {
                                <option value="@doc.Name">
                                    @doc.Name
                                </option>
                                        }
                        </InputSelect>
                        <ValidationMessage For="@(() => TaskObject.Name)" />

                    }

                </div>
            }

        }
        else
        {
            <div class="form-group">
                <label for="Name">@CustomHeader Name</label>
                <input type="hidden" @bind-value="@TaskObject.Id" />
                <InputText class="form-control" @bind-Value="@TaskObject.Name" />
            </div>
        }



        @if (selectedList == "Steps and Documents")
        {
            <div class="form-group">
                <label for="AltDisplayName">Display Name</label>
                <InputText class="form-control form-control-xl" @bind-Value="@TaskObject.AltDisplayName" />
            </div>

            <div class="form-group">
                <label for="DocType">Type</label>
                <InputSelect class="form-control form-control-sm"
                             @bind-Value="TaskObject.Type">
                    <option value="">Select</option>
                    @foreach (var type in DocTypeList)
                        {
                        <option value="@type">
                            @type
                        </option>
                        }
                </InputSelect>
                <ValidationMessage For="@(() => TaskObject.Type)" />
            </div>

            <div class="form-group">
                <label for="AsName">Schedule As Name</label>
                <InputText class="form-control form-control-xl" @bind-Value="@TaskObject.AsName" />
            </div>

            <div class="form-group">
                <label for="CompleteName">Complete As Name</label>
                <InputText class="form-control form-control-xl" @bind-Value="@TaskObject.CompleteName" />
            </div>

            <div class="form-group">
                <label for="RescheduleDays">Reschedule Days</label>
                <InputNumber class="form-control form-control-xs" @bind-Value="RescheduleDays" />
            </div>

            <div class="form-group">
                <label for="NextStatus">Next Status</label>
                <InputSelect class="form-control form-control-sm"
                             @bind-Value="TaskObject.NextStatus">
                    <option value=""></option>
                    @foreach (var s in ListOfStatus)
                        {
                        <option value="@s.ChapterObject.Name">
                            @s.ChapterObject.Name
                        </option>
                        }
                </InputSelect>
                <ValidationMessage For="@(() => TaskObject.Type)" />
            </div>

        }
        else if (selectedList == "Status")
        {
            <div class="form-group">
                <label for="Suppress">Suppress Step</label>
                <InputCheckbox class="form-control" @bind-Value="suppressStep" />
            </div>
        }

        <input type="hidden" @bind-value="@TaskObject.CaseType" />
        <input type="hidden" @bind-value="@TaskObject.CaseTypeGroup" />
        <input type="hidden" @bind-value="@TaskObject.ParentId" />




    </div>

    <div class="button-container">
        <button type="submit" class="btn btn-main">Save</button>
        <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
    </div>
</EditForm>