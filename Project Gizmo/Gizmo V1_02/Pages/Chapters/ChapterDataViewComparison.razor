@if (!(Object.AltDataView is null | Object.DataView is null))
{
    <div class="modal-body" tabindex="0">
        <table class="table-basic table-top-header table-left-header table-borderless">
            <thead>

                <tr>
                    <td style="width: 150px">
                    </td>
                    <td style="width: 250px">
                        <div class=" d-flex justify-content-center">
                            @(sessionState.selectedSystem == "Dev" ? "Dev" : "Live")
                        </div>
                    </td>
                    <td style="width: 250px">
                        <div class=" d-flex justify-content-center">
                            @(sessionState.selectedSystem == "Dev" ? "Live" : "Dev")
                        </div>
                    </td>
                    <td style="width: 30px">
                    </td>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        Block Number
                    </td>
                    <td>
                        @Object.DataView.BlockNo
                    </td>
                    <td>
                        @Object.AltDataView.BlockNo
                    </td>
                    <td>
                        <span class="fa fa-@(Object.DataView.BlockNo == @Object.AltDataView.BlockNo ? "check" : "exclamation")"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        View Name:
                    </td>
                    <td>
                        <input type="text" class="read-only" readonly value="@Object.DataView.ViewName" />
                    </td>
                    <td>
                        <input type="text" class="read-only" value="@Object.AltDataView.ViewName" />
                    </td>
                    <td>
                        <span class="fa fa-@(Object.DataView.ViewName == @Object.AltDataView.ViewName ? "check" : "exclamation")"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Display Name
                    </td>
                    <td>
                        <input type="text" class="read-only" readonly value="@Object.DataView.DisplayName" />
                    </td>
                    <td>
                        <input type="text" class="read-only" value="@Object.AltDataView.DisplayName" />
                    </td>
                    <td>
                        <span class="fa fa-@(Object.DataView.DisplayName == @Object.AltDataView.DisplayName ? "check" : "exclamation")"></span>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td>
                    </td>
                    <td>
                        <div class=" d-flex justify-content-center">
                            <button type="submit" autofocus class="btn btn-main" @onclick="() => HandleValidSubmit(false)">@(sessionState.selectedSystem == "Dev" ? ">> Live" : ">> Dev")</button>
                        </div>
                    </td>
                    <td>
                        <div class=" d-flex justify-content-center">
                            <button type="submit" autofocus class="btn btn-main" @onclick="() => HandleValidSubmit(true)">@(sessionState.selectedSystem == "Dev" ? "Dev <<" : "Live <<")</button>
                        </div>
                    </td>
                    <td>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
}
else
{
    @code {
        string curSystem;
    }

    @if (Object.AltDataView is null)
    {
        curSystem = (sessionState.selectedSystem == "Dev" ? "Live" : "Dev");
    }
    else
    {
        curSystem = (sessionState.selectedSystem == "Dev" ? "Dev" : "Live");

    }

    @if (!CreateNewSmartflow)
    {
        <div class="modal-body">
            <p>Smartflow item does not exist on @curSystem</p>
            <p>Do you wish create this object on @curSystem?</p>
        </div>
    }
    else
    {
        <div class="modal-body">
            <p>Smartflow does not exist on @curSystem</p>
            <p>Do you wish create this Smartflow on @curSystem?</p>
        </div>
    }

    <div class="button-container">
        <button type="submit" autofocus class="btn btn-main" @onclick="() => AddObject(false)">Create on @curSystem</button>
        <button type="button" class="btn btn-secondary" @onclick="() => Close()">Cancel</button>
    </div>
}


