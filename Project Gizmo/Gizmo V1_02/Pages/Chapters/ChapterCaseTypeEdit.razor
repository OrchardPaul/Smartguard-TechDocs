<EditForm Model="@TaskObject" OnValidSubmit="@HandleValidSubmit">
    <div class="modal-body ">
        <div class="form-group">
            @if (isCaseTypeOrGroup == "CaseType")
            {
                <div class="form-group">
                    <label>Case Type</label>
                    <InputText class="form-control" @bind-Value="TaskObject"></InputText>
                </div>


            }
            else if (isCaseTypeOrGroup == "CaseTypeGroup")
            {
                <div class="form-group">
                    <label>Case Type Group</label>
                    <InputText class="form-control" @bind-Value="TaskObject"></InputText>
                </div>

            }
            else
            {
                <div class="form-group">
                    <label>Chapter</label>
                    <InputText class="form-control" @bind-Value="Chapter.Name"></InputText>
                </div>
            }


        </div>


    </div>
    <div class="button-container">
        <button type="submit" class="float-left btn btn-main">Save Changes</button>
        <button type="button" class="float-left ml-2 btn btn-secondary" @onclick="Close">Cancel</button>
    </div>
</EditForm>