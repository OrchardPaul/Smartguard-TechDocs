@page "/admin/newpage"
@using Gizmo_V1_02.Pages.Admin.RoleManagement

<h3><NavLink href="admin">Admin</NavLink> / Manage User Roles</h3>

@if (lstRoles is null)
{
    <div class="spinner"></div>
}
else
{
    <table id="tblRoleList" class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in lstRoles)
            {
                <tr>
                    <td class="title2 fa-font-awesome alert-dismissible compcol_2" >@role.Name</td>
                    <td class="title3 " style="color: @sessionState.CompCol1" >@role.RoleDescription</td>
                    <td><input type="button" class="btn btn-primary" @onclick='(() => PrepareForEdit(role))' data-toggle="modal" data-target="#roleModal" value="Edit" /></td>
                </tr>
            }
        </tbody>
    </table>

    <input type="button" data-toggle="modal" data-target="#roleModal" @onclick='(() => PrepareForInsert())' class="btn btn-primary" value="Add Role" />
}

<RoleDetail TaskObject="@editRole" DataChanged="@DataChanged"></RoleDetail>