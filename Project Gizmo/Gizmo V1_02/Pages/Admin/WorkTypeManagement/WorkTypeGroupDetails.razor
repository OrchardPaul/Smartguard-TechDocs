@inject IJSRuntime jsRuntime
@using Gizmo_V1_02.Data.CustomFormObjects

<div class="modal" tabindex="-1" role="dialog" id="GroupModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <EditForm Model="@TaskObject" OnValidSubmit="@HandleValidSubmit">
                <div class="modal-header">
                    <h3 class="modal-title">Work Type Group</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="fa fa-window-close"></span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (ShowForm)
                    {
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="@TaskObject.group.GroupName">Group Name</label>
                            <InputText @bind-Value="TaskObject.group.GroupName"></InputText>
                        </div>

                        <div class="form-group">
                            <label>Department</label>
                            
                            <InputSelectInteger @bind-Value="TaskObject.group.parentId">
                                <option value="0">
                                    N/A
                                </option>
                                @if (!(Departments is null))
                                {
                                    @foreach (var d in Departments)
                                        {
                                        <option value="@d.Id">
                                            @d.DepartmentName
                                        </option>
                                        }
                                 }

                            </InputSelectInteger>
                        </div>

                    }
                    else
                    {
                        <div class="alert alert-danger" style="margin: 40px 0 40px 0" role="alert">
                            Are you sure you wish to delete this group?
                        </div>
                    }

                    <div class="modal-footer">
                        <div class="container-fluid ">
                            <div class="row">
                                @if (ShowForm)
                                {
                                    <div class="col-6 text-left">
                                        @if (!(TaskObject is null))
                                        {
                                            <button type="button" @onclick="@SubmitForm" class="btn btn-secondary">Delete</button>
                                        }
                                    </div>

                                    <div class="col-6 text-right">
                                        <button type="submit" class="btn btn-sub">Save</button>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-6 text-left">
                                        <button type="button" data-dismiss="modal" @onclick="@CancelForm" class="btn btn-secondary">Cancel</button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <button type="button" @onclick="HandleValidDelete" class="btn btn-sub">Confirm</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>