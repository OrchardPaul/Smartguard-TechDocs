@inject Gizmo_V1_02.Services.SessionState.IUserSessionState state
@using Gizmo_V1_02.Pages.Shared.Modals


<div class="tran-block page-header-block ">
    <div class="float-left back-link">
        <NavLink href="admin"><span class="col-alt fa fa-angle-double-left"></span></NavLink>
    </div>
    <h3>User Management</h3>
    <p>Update system (Superusers) users</p>
</div>

@if (lstUserDataItems is null)
{
    <div class="spinner"></div>
}
else
{
    <div class="col-xl-8 col-12 ml-0 pl-0">

        <div class="mb-3 tran-block rounded ">

            <div class="container-fluid ">

                <div class="row filter-block">
                    <div class="col-2">
                        <h4>Filter:</h4>
                    </div>
                    <div class="col-3 form-group">
                        <label>Role</label>
                        <EditForm Model="selectedRole">
                            <InputSelect class="form-control" @bind-Value="selectedRole">
                                <option value="None"></option>
                                @foreach (var r in lstRoles)
                                    {
                                    <option value="@r.Id">
                                        @r.Name
                                    </option>}
                            </InputSelect>
                        </EditForm>
                    </div>
                    <div class="col-4 form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" value="@filterName" @oninput="changeNameFilter" />
                    </div>
                </div>




                <div class="mt-3 mb-2">
                    <button data-toggle="modal" data-target="#roleModal" @onclick='(() => PrepareForInsert())' class="btn btn-main btn-shadow" style="margin-bottom: 12px"><i class="fa fa-plus pr-1"></i> Add New User</button>
                </div>
                <div class="grid-can-edit">
                    <div class="row grid-header hidden-lg-down ">
                        <div class="col-xl-5 col-12 data-item"><div class="data-item-sub">Email</div></div>
                        <div class="col-7 hidden-lg-down data-item"><div class="data-item-sub">Name</div></div>
                    </div>

                    @foreach (var userDataItem in lstUserDataItems
                                                .Where(U => selectedRole == "None" ? true : U.UserRoles
                                                                                                .Select(R => R.RoleId)
                                                                                                .ToList()
                                                                                                .Contains(selectedRole))
                                                .Where(U => filterName == "" ? true : U.User
                                                                                        .FullName
                                                                                        .ToUpper()
                                                                                        .StartsWith(filterName.ToUpper()))
                                                .ToList())
                    {
                        <div class="row grid-row">
                            <div class="col-xl-5 col-12 data-item">
                                <div class="data-item-sub"><span class="fa fa-user-alt mr-1"></span> @userDataItem.User.UserName</div>
                                <div class="hidden-xl-up data-item-ellipses visible"><button class="btn btn-ellipses" @onclick='(() => PrepareForEdit(userDataItem.User))' data-toggle="modal" data-target="#chapterCaseTypeEdit" value=""><span class="fa fa-ellipsis-v"></span></button></div>
                            </div>
                            <div class="col-7 hidden-lg-down data-item">
                                <div class="data-item-sub">@userDataItem.User.FullName</div>
                                <div class="data-item-ellipses">
                                    <button class="btn btn-ellipses" @onclick='(() => PrepareModalForDelete(userDataItem.User))' data-toggle="modal" data-target="#modalDelete"  value="">
                                        <span class="fa fa-ellipsis-v"></span>
                                    </button>
                                </div>
                            </div>

                            @*
                                    <div class="data-item-ellipses"><a href="javascript: void(0);" @onclick='(() => PrepareForEdit(userDataItem.User))'><span class="fa fa-ellipsis-v"></span></a></div>
                                        <div class="col-1 data-item-edit"><button class="btn btn-edit" @onclick='(() => PrepareForEdit(userDataItem.User))' data-toggle="modal" data-target="#roleModal" value=""><i class="fa fa-pencil-alt"></i></button></div>
                                <div class="col-1 data-item-edit"><button class="btn btn-edit" @onclick='(() => PrepareForEdit(userDataItem.User))' data-toggle="modal" data-target="#roleModal" value=""><i class="fa fa-trash-alt"></i></button></div>*@

                        </div>

                    }

                </div>
            </div>
        </div>

    </div>
}



<ModalDelete DeleteAction="HandleValidDelete" ModalWidth="500px" ModalHeight="300px" InfoHeader="Delete?"></ModalDelete>