@using Gizmo_V1_02.Data.CustomFormObjects

<div class="tran-block rounded ">
    <a class="float-left back-link" href="javascript:void(0);" @onclick="@ToggleDetail">
        <span class="col-main fa fa-angle-double-left fa-2x"></span>
    </a>
    <h3>User Details</h3>
</div>

<EditForm Model="@TaskObject" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="tran-block detail-block">
        <div class="container-fluid">
            <div class="row">
                   
                <div class="col-6 detail-box ">
                    <h5>Personal Details</h5>
                    <div class="detail-group-box">
                        <div class="form-group">
                            <label for="@TaskObject.UserName">User Name (Email)</label>
                            <InputText class="form-control" style="width: 350px;" @bind-Value="TaskObject.UserName"></InputText>
                        </div>

                        <div class="form-group">
                            <label for="@TaskObject.FullName">Name (Alias)</label>
                            <InputText class="form-control" style="width: 350px;" @bind-Value="TaskObject.FullName"></InputText>
                        </div>

                        <div class="form-group">
                            <label for="@TaskObject.PhoneNumber">Phone Number</label>
                            <InputText class="form-control" style="width: 150px;" @bind-Value="TaskObject.PhoneNumber"></InputText>
                        </div>
                        <div class="form-group">
                            @if ((selectedOption == "Insert") | (enablePasswordSet))
                            {
                                    <label for="@TaskObject.PasswordHash">Password</label>
                                    <InputText class="form-control" style="display: inline; width: 250px;" @bind-Value="@TaskObject.PasswordHash" type="password"></InputText>

                                @if (selectedOption == "Edit")
                                {
                                    <button type="button" class="btn btn-main" @onclick="() => TogglePasswordSet()">Save</button>
                                }
                            }
                            else
                            {
                                    <button type="button" class="btn btn-main" @onclick="() => TogglePasswordSet()">Edit Password</button>
                            }
                            </div>
                        </div>
                </div>
                <div class="col-6 detail-box">
                    <h5>Company Details</h5>
                    <div class="detail-group-box">
                        @if (sessionState.Company.CompanyName == "Orchard Rock" & (selectedOption == "Edit"))
                        {
                            @if (!(companyItems is null))
                            {
                                <div class="form-group">
                                    <label for="@TaskObject.SelectedUri">Selected Company</label>
                                    <InputSelectInteger class="form-control" style="width: 300px;" ValueExpression="@(() => TaskObject.SelectedCompanyId)"
                                                        Value="@TaskObject.SelectedCompanyId"
                                                        ValueChanged="@((int value) => ToggleCompany(value))">
                                        @if (companyItems.Where(C => C.IsSubscribed).Count() > 0)
                                        {
                                            @foreach (var company in companyItems.Where(C => C.IsSubscribed))
                                            {
                                                <option value="@company.Company.Id">
                                                    @company.Company.CompanyName
                                                </option>
                                            }

                                        }
                                    </InputSelectInteger>
                                </div>
                            }
                        }


                        <div class="form-group">
                            @if (companyItems is null)
                            {
                                <div class="spinner"></div>
                            }
                            else
                            {
                                @if (!(companyItems.Where(C => C.IsSubscribed) is null))
                                {

                                    <label for="@TaskObject.SelectedUri">System</label>
                                    <InputSelect class="form-control" style="width: 200px;" @bind-Value="TaskObject.SelectedUri">
                                        <option selected value="Live">
                                            Live
                                        </option>
                                        <option value="Dev">
                                            Dev
                                        </option>
                                    </InputSelect>
                                }
                            }
                        </div>
                    </div>
                    <h5>Roles</h5>
                    <div class="detail-group-box">
                        <div class="form-group">
                            <div class="container-fluid">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 p-2">
                                    @if (selectedRoles is null)
                                    {
                                        <div class="spinner"></div>
                                    }
                                    else
                                    {
                                        @if (sessionState.Company.CompanyName == "Orchard Rock")
                                        {
                                            @if (sessionState.isSuperUser)
                                            {
                                                <ul class="ul-simple">
                                                    @foreach (var role in selectedRoles)
                                                    {
                                                        <li><InputCheckbox class="mr-2" @bind-Value="role.IsSubscribed"></InputCheckbox><label>@role.RoleName</label></li>
                                                    }
                                                </ul>
                                            }
                                        }
                                        else
                                        {
                                            <ul class="ul-simple">
                                                @foreach (var role in selectedRoles
                                                               .Where(R => R.RoleName != "Super User")
                                                               .ToList())
                                                {
                                                    
                                                    <li><InputCheckbox class="mr-2" @bind-Value="role.IsSubscribed"></InputCheckbox><label>@role.RoleName</label></li>
                                                }
                                            </ul>
                                        }

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="detail-group-box ">
                <button type="submit" class="btn btn-alt">Save Changes</button>
                <button type="button" class="btn btn-secondary" @onclick="NavigateBack">Cancel</button>

                @if (!(TaskObject.Id is null))
                {
                    @if (!(TaskObject.Id == sessionState.User.Id))
                    {
                        <button type="button" @onclick="HandleValidDelete" class="btn btn-secondary ml-4">Delete</button>
                    }

                }
            </div>
        </div>
    </div>

</EditForm>
