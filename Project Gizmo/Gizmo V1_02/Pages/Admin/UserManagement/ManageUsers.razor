@page "/manageusers"
@inject Gizmo_V1_02.Services.SessionState.IUserSessionState state

<h3>User Management</h3>

@if (lstUsers is null)
{
    <div class="spinner"></div>
}
else
{
    <table id="tblUserList" class="table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Full Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in lstUsers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td><input type="button" class="btn btn-primary" @onclick='(() => PrepareForEdit(user))' data-toggle="modal" data-target="#userModal" value="Edit" /></td>
                </tr>
            }
        </tbody>
    </table>

    <input type="button" data-toggle="modal" data-target="#userModal" @onclick='(() => PrepareForInsert())' class="btn btn-primary" value="Add User" />

}


<UserDetail DataChanged="@DataChanged" companies="@companyItems" TaskObject="@editObject" selectedOption="@editOption" selectedRoles="@roles" enablePasswordSet="@ResetPasswordDropBox"></UserDetail>