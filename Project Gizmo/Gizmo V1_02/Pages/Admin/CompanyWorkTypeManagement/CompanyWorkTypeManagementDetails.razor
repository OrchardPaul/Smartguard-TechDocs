<h3>Work Type Mapping</h3>

@if (workTypeGroups is null)
{
    <span class="spinner"></span>
}
else
{
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-2">
        @foreach (var group in workTypeGroups)
        {

            <div @onclick='(() => ToggleGroupWorkTypes(group))' class="shadow card rounded form-group"> @group.group.GroupName </div>

            @if (group.showWorkType)
            {
                foreach (var type in group.workTypes)
                {
                    <div class="shadow card rounded form-group" @onclick="(() => OpenWorkTypeMappingSelection(type.workType))" data-toggle="modal" data-target="#TypeModal"> @type.workType.TypeName </div>
                }
            }
        }
    </div>
}