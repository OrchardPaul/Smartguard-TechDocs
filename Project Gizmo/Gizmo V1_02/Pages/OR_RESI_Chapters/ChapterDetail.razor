@using Gizmo_V1_02.Data.CustomFormObjects;

<div class="modal-body">
    <EditForm Model="@TaskObject" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        @if (selectedList == "Steps and Documents")
        {
            @if (dropDownChapterList is null)
            {
                <div class="spinner"></div>
            }
            else
            {
                <div class="form-group">
                    <label for="DocType">Type</label>
                    <InputSelectInteger id="Summary" class="form-control" style="width: 250px"
                                        @bind-Value="selectedCaseTypeGroup">
                        <option value="-1">Select</option>
                        @foreach (var group in CaseTypeGroups)
                                {
                            <option value="@group.Id">
                                @group.Name
                            </option>
                                }
                    </InputSelectInteger>
                </div>

                @if (selectedCaseTypeGroup == -1 & TaskObject.Name is null)
                {
                    <div class="form-group">
                        <label>Please select case type group</label>
                    </div>
                }
                else
                {
    <div class="form-group">

        <label for="DocName">Document / Step</label>
        <InputSelect id="documentList" class="form-control" @bind-Value="TaskObject.Name">
            @if (TaskObject.Name is null)
                        {
                <option value="">Select</option>
                        }
                        else
                        {
                <option value="@TaskObject.Name">@TaskObject.Name</option>
                        }


            @foreach (var doc in dropDownChapterList.Where(D => D.CaseTypeGroupRef == selectedCaseTypeGroup).OrderByDescending(D => D.Name).ToList())
                        {
                <option value="@doc.Name">
                    @doc.Name
                </option>
                        }
        </InputSelect>
        <ValidationMessage For="@(() => TaskObject.Name)" />
    </div>
                }


            }

        }
        else
        {
            <div class="form-group">
                <label for="Name">@CustomHeader Name</label>
                <input type="hidden" @bind-value="@TaskObject.Id" />
                <InputText id="name" class="form-control" @bind-Value="@TaskObject.Name" />
            </div>
        }


        @if (selectedList == "Steps and Documents")
        {
    <div class="form-group">
        <label for="DocType">Type</label>
        <InputSelect id="Summary" class="form-control" style="width: 150px"
                     @bind-Value="TaskObject.Type">
            <option value="">Select</option>
            @foreach (var type in DocTypeList)
                {
                <option value="@type">
                    @type
                </option>
                }
        </InputSelect>
        <ValidationMessage For="@(() => TaskObject.Type)" />
    </div>




            <div class="form-group">
                <label for="AsName">Schedule As Name</label>
                <InputText id="name" class="form-control" @bind-Value="@TaskObject.AsName" style="width: 250px" />
            </div>

            <div class="form-group">
                <label for="CompleteName">Complete As Name</label>
                <InputText id="name" class="form-control" @bind-Value="@TaskObject.CompleteName" style="width: 250px" />
            </div>

            <div class="form-group">
                <label for="RescheduleDays">Reschedule Days</label>
                <InputNumber id="name" class="form-control" @bind-Value="RescheduleDays" style="width: 75px" />
            </div>


            <div class="form-group">
                <label for="Suppress">Suppress Step</label>
                <InputCheckbox id="name" class="form-control" @bind-Value="suppressStep" />
            </div>
        }

        <input type="hidden" @bind-value="@TaskObject.CaseType" />
        <input type="hidden" @bind-value="@TaskObject.CaseTypeGroup" />
        <input type="hidden" @bind-value="@TaskObject.ParentId" />


        <div class="button-container">
            <button type="submit" class="btn btn-main">Save</button>
            <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
        </div>
    </EditForm>
</div>

