@inject IJSRuntime jsRuntime
@using Gizmo_V1_02.Data.CustomFormObjects

<div class="modal" tabindex="-1" role="dialog" id="TypeModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <EditForm Model="@TaskObject" OnValidSubmit="@HandleValidSubmit">
                <div class="modal-header">
                    <h3 class="modal-title">Work Type Details</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="fa fa-window-close"></span>
                    </button>
                </div>
                <div class="modal-body">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="@TaskObject.TypeName">Type Name</label>
                            <InputText @bind-Value="TaskObject.TypeName"></InputText>
                        </div>

                        <div class="form-group">
                            <label>Department</label>

                            <InputSelectInteger @bind-Value="TaskObject.DepartmentId">
                                <option value="0">
                                    N/A
                                </option>
                                @if (!(Departments is null))
                                    {
                                    @foreach (var d in Departments)
                                        {
                                        <option value="@d.Id">
                                            @d.DepartmentName
                                        </option>
                                        }
                                    }

                            </InputSelectInteger>
                        </div>
                    <div class="modal-footer">
                        <div class="container-fluid ">
                            <div class="row">
                                    <div class="col-6 text-left">
                                        <button type="submit" class="float-left btn btn-alt">Save</button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <button type="button" data-dismiss="modal" @onclick="@CancelForm" class="btn btn-secondary">Cancel</button>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>