@using Gizmo_V1_02.Data.CustomFormObjects

<EditForm Model="@TaskObject" OnValidSubmit="@HandleValidSubmit">
    <div class="modal-body">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="@TaskObject.TypeName">Type Name</label>
            <InputText @bind-Value="TaskObject.TypeName"></InputText>
        </div>

        <div class="form-group">
            <label>Department</label>

            <InputSelectInteger @bind-Value="TaskObject.DepartmentId">
                <option value="0">
                    N/A
                </option>
                @if (!(Departments is null))
                {
                    @foreach (var d in Departments)
                    {
                        <option value="@d.Id">
                            @d.DepartmentName
                        </option>
                    }
                }

            </InputSelectInteger>
        </div>
        <div class="button-container">
            <button type="submit" class="btn btn-main">Save</button>
            <button type="button" data-dismiss="modal" @onclick="@Close" class="btn btn-secondary">Cancel</button>
        </div>
                    
    </div>
</EditForm>
