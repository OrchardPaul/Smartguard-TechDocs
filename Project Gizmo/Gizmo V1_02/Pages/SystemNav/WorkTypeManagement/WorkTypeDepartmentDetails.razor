<EditForm Model="@TaskObject" OnValidSubmit="@HandleValidSubmit">
    <div class="modal-body">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="@TaskObject.DepartmentName">Department Name</label>
            <InputText @bind-Value="TaskObject.DepartmentName"></InputText>
        </div>

        <div class="modal-footer">
            <div class="container-fluid ">
                <div class="row">
                    <div class="col-6 text-left">
                        <button type="submit" class="float-left btn btn-alt">Save</button>
                    </div>
                    <div class="col-6 text-right">
                        <button type="button" data-dismiss="modal" @onclick="@Close" class="btn btn-secondary">Cancel</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</EditForm>