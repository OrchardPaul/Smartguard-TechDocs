@inject IJSRuntime jsRuntime

<div class="modal" tabindex="-1" role="dialog" id="DepartmentModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <EditForm Model="@TaskObject" OnValidSubmit="@HandleValidSubmit">
                <div class="modal-header">
                    <h3 class="modal-title">Department</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="fa fa-window-close"></span>
                    </button>
                </div>
                <div class="modal-body">

                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group">
                        <label for="@TaskObject.DepartmentName">Department Name</label>
                        <InputText @bind-Value="TaskObject.DepartmentName"></InputText>
                    </div>



                    <div class="modal-footer">
                        <div class="container-fluid ">
                            <div class="row">
                                <div class="col-6 text-left">
                                    <button type="submit" class="float-left btn btn-alt">Save</button>
                                </div>
                                <div class="col-6 text-right">
                                    <button type="button" data-dismiss="modal" @onclick="@CancelForm" class="btn btn-secondary">Cancel</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>