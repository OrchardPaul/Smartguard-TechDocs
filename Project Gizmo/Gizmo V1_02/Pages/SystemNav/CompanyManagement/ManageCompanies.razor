@page "/system/managecompanies"
@using Gizmo_V1_02.Pages.Shared.Modals

<div class="tran-block page-header-block">
    <div class="float-left back-link">
        <NavLink href="system"><span class="col-alt fa fa-angle-double-left"></span></NavLink>
    </div>
    <h3>Manage Companies</h3>
</div>

@if (lstCompanyDetails is null)
{
    <div class="spinner"></div>
}
else
{
    <div class="col-xl-5 col-lg-8 col-12 tran-block rounded mb-3">
            <div class="container-fluid ">
                <div class="mb-3">
                    <button data-toggle="modal" data-target="#companyModal" @onclick='(() => PrepareForInsert())' class="btn btn-main btn-shadow"><i class="fa fa-plus pr-1"></i> Add New Company</button>
                </div>
                <div class="grid-can-edit">
                    @foreach (var vmCompany in lstCompanyDetails)
                    {
                        <div class="row grid-row">
                            <div class="col-12 data-item">
                                <div class="btn-ellipses float-left">
                                    <span class="fa fa-ellipsis-v"></span>
                                    <div class="ellipsis-menu">
                                        <ul>
                                            <li class="col-main" @onclick='() => PrepareForEdit(vmCompany.Company)'>
                                                <span class="fa fa-pencil-alt mr-2"></span>
                                                <span >Edit</span>
                                            </li>
                                            <li class="col-red" @onclick="() => PrepareForDelete(vmCompany.Company)">
                                                <span class="fa fa-trash-alt mr-2"></span>
                                                <span >Delete</span>
                                            </li>

                                        </ul>
                                    </div>
                                </div>
                                <div class="data-item-sub"><span class="fa fa-building mr-1"></span> @vmCompany.Company.CompanyName</div>
                            </div>
                        </div>

                    }
                </div>
            </div>
    </div>

}