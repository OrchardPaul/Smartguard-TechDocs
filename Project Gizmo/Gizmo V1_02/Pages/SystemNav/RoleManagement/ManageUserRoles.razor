@page "/system/manageuserroles"


<div class="tran-block page-header-block ">
    <div class="float-left back-link">
        <NavLink href="system"><span class="col-alt fa fa-angle-double-left"></span></NavLink>
    </div>
    <h3>Manage User Roles</h3>
</div>


@if (lstRoles is null)
{
    <div class="spinner"></div>
}
else
{
    <div class="col-xl-8 col-12 ml-0 pl-0">

        <div class="mb-3 tran-block rounded">
            <div class="container-fluid ">
                <div class="mb-3">
                    <button data-toggle="modal" data-target="#roleModal" @onclick='(() => PrepareForInsert())' class="btn btn-main btn-shadow"><i class="fa fa-plus"></i> Add New Role</button>
                </div>
                <div class="grid-can-edit">
                    <div class="row grid-header hidden-lg-down">
                        <div class="col-xl-4 col-11 data-item"><div class="data-item-sub">Name</div></div>
                        <div class="col-7 hidden-lg-down data-item"><div class="data-item-sub">Description</div></div>
                        <div class="col-1"></div>
                    </div>
                    @foreach (var role in lstRoles)
                    {
                        <div class="row grid-row @(role.OnHover ? "grid-row-hover" : "")" @onmouseover="() => ToggleMoreOption(role)" @onmouseout="() => ToggleMoreOption(role)">
                            <div class="col-xl-4 col-11 data-item"><div class="data-item-sub"><span class="fa fa-user-alt mr-1"></span> @role.Name</div></div>
                            <div class="col-7 hidden-lg-down data-item"><div class="data-item-sub">@role.RoleDescription</div></div>
                            <div class="col-1 data-item-edit"><button class="btn btn-edit" @onclick='(() => PrepareForEdit(role))' data-toggle="modal" data-target="#roleModal" value=""><i class="fa fa-pencil-alt"></i></button></div>
                        </div>

                    }
                    </div>
                </div>
            </div>
    </div>

}

<RoleDetail TaskObject="@editRole" DataChanged="@DataChanged"></RoleDetail>
