@inject IJSRuntime jsRuntime


<div class="modal" tabindex="-1" role="dialog" id="roleModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <EditForm Model="@TaskObject" OnValidSubmit="@HandleValidSubmit">
                <div class="modal-header">
                    <h3 class="modal-title">Edit Role</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="fa fa-window-close"></span>
                    </button>
                </div>
                <div class="modal-body">

                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group">
                        <label for="@TaskObject.Name">Role Name</label>
                        <InputText class="form-control" @bind-Value="TaskObject.Name"></InputText>
                    </div>
                    <div class="form-group">
                        <label for="@TaskObject.RoleDescription">Role Description</label>
                        <InputTextArea class="form-control" style="height: 90px" @bind-Value="TaskObject.RoleDescription"></InputTextArea>
                    </div>


                </div>
                <div class="modal-footer">
                    <div class="container-fluid ">
                        <div class="row">
     

                            <div class="col-6 text-right">
                                <button type="submit" class="float-left btn btn-alt">Save</button>
                            </div>

                            <div class="col-6 text-left">
                                <button type="button" data-dismiss="modal" @onclick="@CancelForm" class="btn btn-secondary">Cancel</button>
                            </div>
    
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>


