@using Microsoft.AspNetCore.Identity
@using GadjIT_V1_02.Data
@using GadjIT_V1_02.Services.SessionState
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ApplicationUser signedInUser = null;

    if (SignInManager.IsSignedIn(User))
    {
        signedInUser = await UserManager.GetUserAsync(User);
    }

}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (signedInUser is null)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @(string.IsNullOrWhiteSpace(signedInUser.FullName) ? User.Identity.Name : signedInUser.FullName)!</a>
            </li>
        }


        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>


